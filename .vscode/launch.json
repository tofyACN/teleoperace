    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch server via NPM",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**",
                "c:/Program Files (x86)/Yarn/lib/cli.js",
                "c:/Program Files (x86)/Yarn/lib/toSubscriber.js.map"
            ],
            "type": "pwa-node"
        }
    ]
}